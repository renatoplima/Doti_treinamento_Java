package decisao;

import javax.swing.JOptionPane;

public class DecisaoSimples {
	
	public static void main(String[] args) {
		
		String diciplina = JOptionPane.showInputDialog("Disciplina");
		float nota1 = Float.parseFloat(JOptionPane.showInputDialog("Digite a 1ª nota"));
		float nota2 = Float.parseFloat(JOptionPane.showInputDialog("Digite a 2ª nota"));
		double media = (nota1 + nota2) / 2;
		System.out.println("Media: "+ media);
		
		/*
		 * Capturem:
		 * - nome da diciplina
		 * - primeira nota
		 * - segunda nota
		 * - calcular a média
		 * - exibir a média
		 * 
		 */
		
	}

}
