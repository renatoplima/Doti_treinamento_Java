package decisao;

import javax.swing.JOptionPane;

public class DecisaoSimples {
	
	public static void main(String[] args) {
		
		String materia = JOptionPane.showInputDialog("Matéria");
		String primeira_nota = JOptionPane.showInputDialog("Digite a 1ª nota");
