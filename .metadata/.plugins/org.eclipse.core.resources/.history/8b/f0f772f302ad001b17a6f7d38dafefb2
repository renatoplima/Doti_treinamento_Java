package decisao;

import java.util.Arrays;

import javax.swing.JOptionPane;

public class Exercicio3 {
	
	public static void main(String[] args) {
		short valor1 = Short.parseShort(JOptionPane.showInputDialog("1º Valor"));
		short valor2 = Short.parseShort(JOptionPane.showInputDialog("2º Valor"));
		short valor3 = Short.parseShort(JOptionPane.showInputDialog("3º Valor"));
		int[] valores = {valor1, valor2, valor3};
		//System.out.println(valores);		
		//Arrays.sort(valores, 0, 1, 2);
		for (int num : valores) {
			System.out.println(num);
		}
		
	}

}
